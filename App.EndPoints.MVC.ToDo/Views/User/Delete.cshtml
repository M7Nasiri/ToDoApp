@using App.Domain.Core.UserAgg.DTOs
@model DeleteUserDto
@{
    ViewData["Title"] = "حذف کاربر";
    Layout = "_CustomLayout";
}
@section styles {
    <link rel="Stylesheet" type="text/css" href="/css/customCss.css" asp-append-version="true" />
}
<h2 class="bg-3">آیا از حذف مطمین هستید ؟</h2>
<div class="container">
    <form method="post" asp-action="delete" enctype="multipart/form-data">
        <input type="hidden" asp-for="ImagePath" />
        <div class="form-group">
            <label>نام و نام خانوادگی</label>
            <input type="text" asp-for="FullName" />
        </div>
        <div class="form-group">
            <label>نام کاربری</label>
            <input type="text" asp-for="UserName" />
        </div>

        <div class="form-group">
            <label>تصویر</label>
            <img src="@Model.ImagePath" />
        </div>
        <div class="form-buttons">
            <button type="submit">حذف</button>
            <button type="reset" class="reset-btn">پاک کردن</button>
        </div>
    </form>
</div>