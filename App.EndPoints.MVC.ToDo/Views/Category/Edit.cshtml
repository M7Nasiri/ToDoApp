@using App.Domain.Core.CategoryAgg.Entities
@model Category
@{
    ViewData["Title"] = "ویرایش دسته بندی";
    Layout = "_CustomLayout";
}
@section styles {
    <link rel="Stylesheet" type="text/css" href="/css/customCss.css" asp-append-version="true" />
}

<div class="container">
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <label>نام دسته بندی</label>
            <input type="text" asp-for="Title" />
        </div>

        <div class="form-group">
            <label>توضیحات</label>
            <textarea asp-for="Description" rows="4"></textarea>
        </div>

        <div class="form-buttons">
            <button type="submit">ویرایش</button>
            <button type="reset" class="reset-btn">پاک کردن</button>
        </div>
    </form>
</div>

